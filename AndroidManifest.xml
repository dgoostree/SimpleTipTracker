<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goostree.simpletipcalculator"
    android:versionCode="6"
    android:versionName="1.31" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="com.goostree.simpletipcalculator.base.TipRecordv2"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name="com.goostree.simpletipcalculator.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.goostree.simpletipcalculator.AddActivity"
            android:label="@string/title_activity_add"
            android:parentActivityName="com.goostree.simpletipcalculator.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.goostree.simpletipcalculator.MainActivity" />
        </activity>
        <activity
            android:name="com.goostree.simpletipcalculator.EditTipActivity"
            android:label="@string/title_activity_edit_tip"
            android:parentActivityName="com.goostree.simpletipcalculator.MainActivity"
             android:screenOrientation="portrait" 
             android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.goostree.simpletipcalculator.MainActivity" />
        </activity>
        <activity
            android:name="com.goostree.simpletipcalculator.EditTipeeActivity"
            android:label="@string/title_activity_edit_tipee"
            android:parentActivityName="com.goostree.simpletipcalculator.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.goostree.simpletipcalculator.MainActivity" />
        </activity>
        <activity
            android:name="com.goostree.simpletipcalculator.ViewTipActivity"
            android:label="@string/title_activity_view_tip"
            android:parentActivityName="com.goostree.simpletipcalculator.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.goostree.simpletipcalculator.MainActivity" />
        </activity>
    </application>

</manifest>
